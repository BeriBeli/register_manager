{
    "name": "@register-manager/backend",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "main": "./src/index.ts",
    "scripts": {
        "dev": "bun run --hot src/index.ts",
        "build": "bun build src/index.ts --outdir dist --target bun",
        "start": "bun run dist/index.js",
        "test": "bun test",
        "lint": "tsc --noEmit",
        "auth:secret": "bun run scripts/generate-auth-secret.ts",
        "db:generate": "drizzle-kit generate",
        "db:migrate": "bun run src/db/migrate.ts",
        "db:seed": "bun run src/db/seed.ts",
        "db:studio": "drizzle-kit studio",
        "db:import": "bun run src/db/import-ipxact.ts"
    },
    "dependencies": {
        "@hono/zod-validator": "^0.7.6",
        "@register-manager/shared": "workspace:*",
        "@types/xml2js": "^0.4.14",
        "better-auth": "^1.1.0",
        "drizzle-orm": "^0.45.1",
        "fast-xml-parser": "^4.5.0",
        "hono": "^4.6.0",
        "postgres": "^3.4.0",
        "xml2js": "^0.6.2",
        "zod": "^3.24.0"
    },
    "devDependencies": {
        "bun-types": "^1.3.0",
        "drizzle-kit": "^0.30.0",
        "typescript": "^5.7.0"
    }
}
